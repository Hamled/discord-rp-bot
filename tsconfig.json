{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "outDir": "dist",
    "lib": ["es6"],
    "sourceMap": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/",
      ],
      "typings/*": [
        "src/typings/*",
      ]
    }
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "src/test/**/*.spec.ts"
  ]
}
